<% layout("/layouts/boilerplate")%>
    <div class="row">
        <div class="col-8 offset-2">
            <h1>Create New Listing</h1>
            <p>Fill in the details below to add your property to Homify</p>
            <br>
            <form method="POST" action="/listings" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="title" class="form-lable">Property Title</label>
                    <input  name="listing[title]" placeholder="Enter title" type="text" required class="form-control">
                </div>

                <div class="mb-3">
                    <label for="description" class="form-lable">Description</label>
                    <textarea  name="listing[description]" placeholder="Describe your property " required class="form-control"></textarea>
                </div>
                
                <div class="mb-3">
                    <label for="image" class="form-lable">Image URL</label>
                    <input  name="listing[image]" placeholder="enter image here" type="text" class="form-control">
                </div>
                
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-lable">Price </label>
                        <input  name="listing[price]" placeholder="enter price" type="number" min="0" required class="form-control">
                    </div>  
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-lable">Country</label>
                        <input  name="listing[country]" placeholder="enter country" type="text" required class="form-control"> 
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-lable">Location</label>
                    <input  name="listing[location]" placeholder="enter location" type="text" required class="form-control">    
                </div>
                
                <br>
                <button class="btn btn-dark">
                     Add Listing
                </button>
            </form>
            <br>        
        </div>
    </div>